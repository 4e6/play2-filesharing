# Routes

# Home page
GET      /                      controllers.Application.index()
POST     /                      controllers.Application.uploadFile()

# API
POST     /checkUrl              controllers.Application.checkUrl()
POST     /checkPassword         controllers.Application.checkPassword()

# Static resources
GET      /assets/*file          controllers.Assets.at(path="/public", file)

# Downloading
GET      /*url                  controllers.Application.dlIndex(url)
POST     /*url                  controllers.Application.dlSendFile(url)
