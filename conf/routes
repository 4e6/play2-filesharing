# Routes

# Public API
POST     /post                  controllers.Application.apiUpload()
POST     /get                   controllers.Application.apiGet()
GET      /__retrieve            controllers.Application.retrieveFile(url, key, data)

# Private API
POST     /checkUrl              controllers.Application.checkUrl()
POST     /__checkSecret         controllers.Application.checkSecret()

# Static resources
GET      /assets/*file          controllers.Assets.at(path="/public", file)

# Web pages
GET      /                      controllers.Application.index()
POST     /                      controllers.Application.uploadFile()
GET      /*url                  controllers.Application.downloadIndex(url)
