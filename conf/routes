# Routes

# Home page
GET      /                      controllers.Application.index()
POST     /                      controllers.Application.uploadFile()

# API
POST     /checkUrl              controllers.Application.checkUrl()
POST     /__checkPassword         controllers.Application.checkPassword()

# Static resources
GET      /assets/*file          controllers.Assets.at(path="/public", file)

# Downloading
GET      /__retrieve            controllers.Application.retrieveFile(url, password)
GET      /*url                  controllers.Application.downloadIndex(url)
