-@ val records: Seq[Record] = Seq.empty
- attributes("title") = "Search"

- captureAttribute("row")
  .row-fluid
    .span2 &nbsp
    .span8
      - if (records.isEmpty)
        p Nothing found
      - else
        table.table.table-striped
          thead
            tr
              th URL
              th Name
              th Size
          tbody
          - for (record <- records)
            tr
              td= record.url
              td= record.name
              td= record.size
    .span2 &nbsp

- layout("layouts/main.jade")
  .page-header
    h1 Search
  form#search(action={routes.Application.search()} method="get")
    input#search(type="text" name="q" placeholder="What are you looking for?")
