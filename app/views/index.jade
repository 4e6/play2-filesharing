- attributes("title") = "Index title"
- layout("layouts/main.jade")
  form(action={routes.Application.uploadFile} method="post" enctype="multipart/form-data")
    fieldset
      legend Upload file
      div
        label(for="filename") Select file
        input#filename(type="file" name="file")
        span#validateFilename
      div
        label(for="url") Desired URL:
        span http://localhost/
        input#url(type="text" name="url")
        span#validateUrl
      div
        label(for="password") Password
        input#password(type="text" name="password")
      #submit
        button#upload(type="submit" name="upload") Upload
  script(type="text/javascript" src={routes.Assets.at("javascripts/uploadform-validator.min.js")})
  :javascript
    $('body').noisy({
      'intensity' : 1,
      'size' : 200,
      'opacity' : 0.050,
      'fallback' : '',
      'monochrome' : false
    }).css('background-color', '#dbdbdb');

